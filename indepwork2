#include <iostream>

int main()
{
    using namespace std;
    setlocale(LC_ALL, "RU");
    int a;
    cout << "[-] Программа <<Времена года>>" << endl << endl << "[1] Лето" << endl << "[2] Осень" << endl << "[3] Зима" << endl << "[4] Весна" << endl;
    cout << "[-] Введите значение: ";
    cin >> a;
    if (a == 1) {
        cout << "[-] Сейчас лето, можно одеть футболку и шорты.";
    }
    else if (a == 2) {
        cout << "[-] Сейчас осень, следует одеться тепло и взять с собой зонт.";
    }
    else if (a == 3) {
        cout << "[-] Сейчас зима, следует надеть пуховик и теплые ботинки.";
    }
    else if (a == 4) {
        cout << "[-] Сейчас весна, стоит одеть ветровку и непромокаемые ботинки.";
    }
    else {
        cout << "Вы ввели неправильную цифру!";
    }
}
